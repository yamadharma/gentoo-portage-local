#opts="start stop reload restart"
caudiumhome=/usr/lib/caudium

depend() {
	need net
}

start() {
	ebegin "Starting caudium"
	cd ${caudiumhome}
	start-stop-daemon --start --quiet --pidfile ${pidfile} --exec ./start -- --pid-file=${pidfile}
	eend $?
}

stop() {
	ebegin "Stopping caudium"
	start-stop-daemon --stop --quiet --pidfile $pidfile
	eend $?
}

