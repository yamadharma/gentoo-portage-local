# description: Starts and stops the Samba wrepld daemon to provide \
# WINS replication services between WINS partner servers.

depend() 
{
	need net
}

start() 
{
	ebegin "Starting WINS Replication services:"
	start-stop-daemon --start --quiet --exec /usr/sbin/wrepld
	result=$?
	eend $result
}

stop() 
{
	ebegin "Shutting down WINS replication services: "
	start-stop-daemon --stop --quiet --pidfile /var/run/samba/wrepld.pid
	result=$?
	eend $result
}
