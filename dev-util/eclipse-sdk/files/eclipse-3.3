[ -f $HOME/.eclipserc ] && . $HOME/.eclipserc

ECLIPSE_HOME=${ECLIPSE_HOME:="/usr/lib/eclipse-3.3"}
ECLIPSE_BIN="${ECLIPSE_HOME}/eclipse"

if [ ! -x ${ECLIPSE_BIN} ] ; then
	echo "Failed to find executable '${ECLIPSE_BIN}'" > /dev/stderr
	exit -1
fi

if [ $(whoami) == "root" ] ; then
	echo "!!! You are running Eclipse as root. Be advised that this will modify the contents of"
	echo "!!! /usr/lib/eclipse-3.3, and that such a modification may prevent you from safely"
	echo "!!! upgrading to later 3.3 revisions."
	echo
	echo "!!! To ensure correct behavior on your next upgrade, do:"
	echo "!!!  1) 'emerge unmerge \"=eclipse-sdk-3.3\"'"
	echo "!!!  2) 'rm -rf /usr/lib/eclipse-3.3'"
	echo "!!!  3) 'emerge eclipse-sdk'"
fi

[[ "$(java-config -f)" =~ "gcj" ]] \
	&& export JAVA_PKG_CLASSMAP="${ECLIPSE_HOME}/eclipse.gcjdb"

LIBDIR="lib"
[ -d /usr/lib64 ] && LIBDIR="lib64"
[ -f /usr/${LIBDIR}/mozilla-firefox/libgtkembedmoz.so ] \
	&& export MOZILLA_FIVE_HOME="/usr/${LIBDIR}/mozilla-firefox"
[ -f /usr/${LIBDIR}/seamonkey/libgtkembedmoz.so ] \
	&& export MOZILLA_FIVE_HOME="/usr/${LIBDIR}/seamonkey"
[ -f /usr/${LIBDIR}/xulrunner/libgtkembedmoz.so ] \
	&& export MOZILLA_FIVE_HOME="/usr/${LIBDIR}/xulrunner"

exec ${ECLIPSE_BIN} -vm $(java-config --java) "$@"
