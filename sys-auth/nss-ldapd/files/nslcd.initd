depend() {
	need net
}

start() {
	ebegin "Starting nslcd"
	eval start-stop-daemon --start --quiet --exec /usr/sbin/nslcd
	eend $?
}

stop() {
	ebegin "Stopping nslcd"
	start-stop-daemon --stop --signal 2 --quiet --exec /usr/sbin/nslcd
	eend $?
}
