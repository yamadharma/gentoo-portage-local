depend() {
	after heimdal-kdc
}

start() {
	ebegin "Starting Heimdal KCM..."
	start-stop-daemon --start --pidfile /var/run/kcm.pid --exec /usr/sbin/kcm -- --detach
	eend $?
}

stop() {
	ebegin "Stopping Heimdal KCM..."
	start-stop-daemon --stop --pidfile /var/run/kcm.pid
	eend $?
}

restart() {
	svc_stop
	svc_start
}
