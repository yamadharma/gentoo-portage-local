# $Header: $

depend() {
	need net
	use heimdal-kdc
	after logger
}

start() {
	ebegin "Starting heimdal kadmind"
		/usr/sbin/kadmind  &
		echo $! > /var/run/heimdal-kadmind.pid
	eend $?
}

stop() {
	ebegin "Stopping heimdal kadmind"
	start-stop-daemon --stop --quiet --exec \
		/usr/sbin/kadmind
	eend $?
}
