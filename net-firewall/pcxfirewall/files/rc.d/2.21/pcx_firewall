# Startup script to run the PCX Firewalls generated scripts.
#
# chkconfig: 2345 11 92
#
# description: Automates a packet filtering firewall with iptables.

LOCATION="/etc/pcx_firewall"

opts="${opts} clear panic"

depend() {
	need net
}

checkconfig() {
	# make sure we have the necessary scripts
	if [ ! -e $LOCATION/firewall ]; then
	    eerror "Check for firewall script: \$LOCATION/firewall"
	    return 1	    
	fi
	return 0
}

start() {
	ebegin "Starting pcx_firewall"
	$LOCATION/firewall start
	eend $?
}

stop() 
{
	ebegin "Stopping pcx_firewall"
	$LOCATION/firewall stop
	eend $?
}

restart() 
{
	ebegin "Restarting pcx_firewall"
	$LOCATION/firewall restart
	eend $?
}

status() 
{
  $LOCATION/firewall status 
}

panic()
{
  $LOCATION/firewall panic 
}

clear() 
{ 
  ebegin "Clear pcx_firewall"
  $LOCATION/firewall clear 
  eend $?
}
